<h1>Edit <%=@recipe.name%> </h1>

<%= render 'form' %>

<div class="section">
  <h2> Add a Category to this recipe</h2>

  <%= form_tag(recipe_categories_path(:recipe_id => @recipe.id), :method => "post") do %>
   <%= select_tag "category_name", options_for_select(@categories) %>
   <%= submit_tag "Add Category" %>
  <%end%>
</div>
