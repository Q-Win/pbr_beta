<div>
<h1><%= @recipe.name %> </h1>
<%= button_to "Add to Favorites", user_path(current_user) %>
</div>

<p>
  <h2> Ingredients </h2>
  <ul><% @recipe.ingredients_list.each do |ingredient| %>
    <li><%= ingredient%></li>
    <% end %>
  </ul>
</p>
<p>
  <h2> Directions </h2>
  <%= @recipe.directions %> </p>

<p>
  <h2> Notes </h2>
  <%= @recipe.notes %> </p>
